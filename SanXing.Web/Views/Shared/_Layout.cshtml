<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 吾日三省吾身</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap/css")
    @*   @Styles.Render("~/Content/kendo/2012.3.1114/css")*@
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquerycontrol")
    @*  <script src="~/Scripts/kendo/2012.3.1114/kendo.all.min.js"></script>
    <script src="~/Scripts/kendo/2012.3.1114/kendo.aspnetmvc.min.js"></script>
    <script src="~/Scripts/kendo/2012.3.1114/cultures/kendo.culture.zh-CHS.min.js"></script>
    <script type="text/javascript">
        kendo.culture("zh-CHS");
    </script>*@
</head>
<body>
    <div class="navbar navbar-inverse ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("三省吾身", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("index", "cost")">费用</a></li>
                    <li><a href="#">时间</a></li>
                    <li><a href="#">人脉</a></li>
                    <li><a href="#">文章</a></li>
                    <li class="dropdown">
                        <a data-toggle="dropdown" href="#">管理<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <li><a href="@Url.Action("index", "costtype")">费用类别</a></li>
                            <li><a href="@Url.Action("index", "blogtype")">文章类别</a></li>
                            <li><a href="@Url.Action("index", "contacttype")">联系人类别</a></li>
                            <li><a href="@Url.Action("index", "contactway")">联系类别</a></li>
                            <li><a href="@Url.Action("index", "richtype")">贫富类别</a></li>
                            <li><a href="@Url.Action("index", "timecosttype")">时间类别</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()

        <footer class="footer">
            <p>&copy; @DateTime.Now.Year - 吾日三省吾身</p>
        </footer>
    </div>
    @Html.Partial("_Message")
    @Scripts.Render("~/bundles/base")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
