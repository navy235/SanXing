@model  int

@{
    string name = ViewData.TemplateInfo.GetFullHtmlFieldId(null);
    List<SelectListItem> renderList = new List<SelectListItem>();
    renderList = (List<SelectListItem>)ViewData["Data_" + name];
   
}
<div class="k-checklist k-form-checklist clearfix">
    @for (int i = 0; i < renderList.Count; i++)
    { 
        <span class="k-checklist-item">
            <input type="radio" id="@(name + i.ToString())" name="@(name + "_check")" value="@renderList[i].Value" checked="@renderList[i].Selected" />
            <label for="@(name + i.ToString())" class="label-checkbox" >@renderList[i].Text</label>
        </span>
    }
</div>
@Html.TextBoxFor(m => m, new { tabindex = -1, @class = "field-valid-text" })

<script type="text/javascript">
    $(function () {
        $('#@name').radioCheckList({});
    })
</script>
